// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
   binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  
  phone     String?
  address   String?

  isAdmin   Boolean  @default(false)

  housings  Housing[]
  bookings  Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum HousingType {
  House
  Apartment
}

enum HousingStatus {
  Draft
  Available
  Occupied
}

model Housing {
  id        String   @id @default(cuid())
  type      HousingType
  rent      Float
  address   String
  surface   Int
  description String

  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  
  status    HousingStatus @default(Draft)

  bookings  Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  Pending
  Accepted
  Rejected
  Cancelled
}

model Booking {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime

  housing   Housing  @relation(fields: [housingId], references: [id])
  housingId String

  tenant    User     @relation(fields: [tenantId], references: [id])
  tenantId  String

  status   BookingStatus @default(Pending)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}